<div class='row'>
  <div class="submit-form col-md-6 col-md-offset-3">
    <h2 class='page-title'>アカウント編集</h2>
    <%= form_with(model: @post, local: true) do |f| %>

      <div id='edit-post'>
        <%= image_tag(@post.thumbnail('420x420^', '420x420+0+0')) if @post.image.attached? %>
      </div>

      <div class='form-group'>
        <%= f.text_area :content, class: 'form-control' %>
      </div>

      <div class='action'>
        <%= f.submit '編集する', class: 'submit-btn btn btn-primary' %>
      </div>

    <% end %>
  </div>
  <div class='back-post-link'>
    <b><%= link_to 'back', post_path(@post), class: 'btn btn-primary' %></b>
  </div>
</div>
