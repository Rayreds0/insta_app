<div class='row'>
  <div class="submit-form col-md-6 col-md-offset-3">
    <h2 class='page-title'>新規投稿</h2>
    <%= form_with(model: @post, local: true) do |f| %>

      <div class='form-image'>
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <div class='form-group'>
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>

      <div class='action'>
        <%= f.submit '投稿する', class: 'submit-btn btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>
