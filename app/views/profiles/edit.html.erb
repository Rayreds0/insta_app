<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <h2 class='page-title'>アカウント編集</h2>

    <%= form_with(model: @profile, local: true, method: :patch) do |f| %>

      <div class='field'>
        <%= f.label :icon %><br />
        <%= f.file_field :icon %>
      </div>

      <div class='form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :biography %>
        <%= f.text_area :biography, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :birthday %>
        <%= f.date_select :birthday %>
      </div>

      <div class='action'>
        <%= f.submit '変更する', class: 'submit-btn btn btn-primary my-1' %>
      </div>

    <% end %>
  </div>
</div>
