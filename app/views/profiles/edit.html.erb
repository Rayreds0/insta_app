<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <h2 class='page-title'>アカウント編集</h2>

    <%= form_with(model: @profile, local: true, method: :patch) do |f| %>

      <div id='user-image'>
        <% if @user.profile.icon.attached? %>
          <%= image_tag @user.thumbnail('200x200^', '200x200+0+0'), class: "img-circle"%>
        <% else %>
          <%= image_tag 'no-image.png', :size => '200x200', class: 'img-circle' %>
        <% end %>
      </div>

      <div class='field-image'>
        <%= f.file_field :icon, class: 'image-form' %>
      </div>

      <div class='form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :biography %>
        <%= f.text_area :biography, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :website %>
        <%= f.text_area :website, class: 'form-control' %>
      </div>

      <div class='action'>
        <%= f.submit '変更する', class: 'submit-btn btn btn-primary my-1' %>
      </div>

    <% end %>
  </div>
</div>
