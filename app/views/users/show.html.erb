<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <h2 class='page-title'>アカウント詳細</h2>
    <div>
      <p><%= @user.username %></p>
    </div>
    <div id='show-user'>
      <%= image_tag @user.thumbnail('200x200^', '200x200+0+0'), class: "rounded-circle" if @user.profile.icon.attached? %>
    </div>
      <p><%= @user.profile.name %></p>
      <p><%= @user.profile.biography %></p>
    <%= link_to 'edit', edit_profile_path %>
  </div>
</div>
